rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User sub-collections (profile, goal, etc.)
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Progress entries - users can only access their own
    match /progress/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public example data - read-only for all authenticated users
    match /examples/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write (handled separately)
    }
    
    // Feedback data - users can only write their own, no reading
    match /feedback/{userId}/{document=**} {
      allow read: if false; // Feedback is write-only for privacy
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Global settings - read-only for authenticated users
    match /settings/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Admin-only writes
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}